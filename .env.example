# S3 Compatible Storage Configuration
# Public base URL for accessing stored media files
NEXT_PUBLIC_S3_PUBLIC_BASE_URL="https://your-project-ref.storage.supabase.co/storage/v1/s3"

# Supabase S3-Compatible Storage Configuration
# Endpoint for Supabase storage service
NEXT_PUBLIC_SUPABASE_S3_ENDPOINT="https://your-project-ref.storage.supabase.co/storage/v1/s3"
NEXT_PUBLIC_SUPABASE_S3_REGION="your-region"
NEXT_PUBLIC_SUPABASE_S3_ACCESS_KEY_ID="your-access-key-id"
NEXT_PUBLIC_SUPABASE_S3_SECRET_ACCESS_KEY="your-secret-access-key"
NEXT_PUBLIC_SUPABASE_S3_BUCKET="your-bucket-name"

# Supabase Authentication URL
NEXT_PUBLIC_SUPABASE_AUTH_URL="https://your-project-ref.supabase.co"

# Supabase Authentication Key
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-from-supabase-project-settings"

# Edge Function for S3 Compatible Storage Management
# 格式: https://YOUR_PROJECT_REF.functions.supabase.co/s3-compat-storage
# 替换 YOUR_PROJECT_REF 为你的 Supabase 项目 ref
NEXT_PUBLIC_FUNCTIONS_URL="https://your-project-ref.functions.supabase.co/s3-compat-storage"

# Payment Integration (public-facing URL for initiating checkout)
# Only expose NEXT_PUBLIC_ prefixed variables to the client. Server-side secrets should NOT be prefixed with NEXT_PUBLIC_.
NEXT_PUBLIC_PAYMENT_API_URL="https://payment-tracker--athendrakomin.replit.app"
# (Optional) Server-side URL to call the payment provider from the server. If set, server routes will proxy calls to this URL.
PAYMENT_API_URL="https://payment-tracker--athendrakomin.replit.app"
# (Optional) Supabase service role key (server-only). Needed if you want the server to persist subscriptions in the database.
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
# Optional direct Postgres database URL (e.g. for self-hosted DB instead of using Supabase admin API)
DATABASE_URL="postgresql://postgres:password@helium/heliumdb?sslmode=disable"
# Secret used to protect admin-only endpoints (migrate, reconcile)
MIGRATE_SECRET="a-strong-secret-here"

# Authentication Configuration (server-side secrets - do NOT prefix with NEXT_PUBLIC_)
PASSWORD_HASH="your-password-hash"
TEMP_TOKEN_SECRET="your-temp-token-secret"